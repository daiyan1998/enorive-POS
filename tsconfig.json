{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",             // important for ESM
    "moduleResolution": "bundler",  // required for ESM module mapping
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src"]
}
